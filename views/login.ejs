<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/styles.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fab fa-facebook"></i>
                Facebook Auto Actions
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/auth/register">
                    <i class="fas fa-user-plus"></i> Register
                </a>
            </div>
        </div>
    </nav>

    <!-- Alert Container -->
    <div id="alertContainer" class="container mt-3"></div>

    <!-- Loading Container -->
    <div id="loading" class="container mt-3" style="display: none;">
        <div class="alert alert-info">
            <div class="d-flex align-items-center">
                <div class="spinner me-2"></div>
                <span>Loading...</span>
            </div>
        </div>
    </div>

    <!-- Login Content -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </h4>
                        <p class="mb-0">Access your Facebook Auto Actions account</p>
                    </div>
                    <div class="card-body p-4">
                        <!-- Login Type Tabs -->
                        <ul class="nav nav-tabs mb-4" id="loginTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="credentials-tab" data-bs-toggle="tab" 
                                        data-bs-target="#credentials" type="button" role="tab">
                                    <i class="fas fa-user"></i> Credentials
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="cookies-tab" data-bs-toggle="tab" 
                                        data-bs-target="#cookies" type="button" role="tab">
                                    <i class="fas fa-cookie-bite"></i> Cookie Login
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content" id="loginTabContent">
                            <!-- Credentials Login -->
                            <div class="tab-pane fade show active" id="credentials" role="tabpanel">
                                <form id="loginForm">
                                    <input type="hidden" name="loginType" value="credentials">
                                    
                                    <div class="mb-3">
                                        <label for="facebookId" class="form-label">Facebook ID</label>
                                        <input type="text" class="form-control" id="facebookId" name="facebookId" 
                                               placeholder="Enter your Facebook ID" required>
                                        <div class="form-text">
                                            Your Facebook numeric ID (found in your profile URL)
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" 
                                               placeholder="Enter your password" required>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-sign-in-alt"></i> Login
                                        </button>
                                    </div>
                                </form>
                            </div>

                            <!-- Cookie Login -->
                            <div class="tab-pane fade" id="cookies" role="tabpanel">
                                <form id="loginForm">
                                    <input type="hidden" name="loginType" value="cookies">
                                    
                                    <div class="mb-3">
                                        <label for="cookieString" class="form-label">Facebook Cookie String</label>
                                        <textarea class="form-control" id="cookieString" name="cookieString" 
                                                  rows="6" placeholder="Paste your Facebook cookie string here..." required></textarea>
                                        <div class="form-text">
                                            <strong>How to get cookies:</strong>
                                            <ol class="mt-2">
                                                <li>Open Facebook in your browser</li>
                                                <li>Press F12 to open Developer Tools</li>
                                                <li>Go to Application/Storage tab</li>
                                                <li>Find Cookies under facebook.com</li>
                                                <li>Copy all cookie values</li>
                                            </ol>
                                        </div>
                                    </div>
                                    
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-cookie-bite"></i> Login with Cookies
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Additional Info -->
                        <div class="text-center">
                            <p class="text-muted mb-2">Don't have an account?</p>
                            <a href="/auth/register" class="btn btn-outline-primary">
                                <i class="fas fa-user-plus"></i> Create Account
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Features Preview -->
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-shield-alt text-primary" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Secure</h6>
                            <small class="text-muted">Encrypted session storage</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-robot text-success" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Automated</h6>
                            <small class="text-muted">Smart automation tools</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-chart-line text-info" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Analytics</h6>
                            <small class="text-muted">Performance tracking</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Custom JS -->
    <script src="/script.js"></script>
</body>
</html>